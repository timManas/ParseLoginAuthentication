<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context="experiment.illustro.parseloginauthentication.LoginScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/imgChatlerLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/chatler_logo"/>

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:ems="10"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Username"
            android:drawableLeft="@drawable/login_username_img"
            android:background="@drawable/edittext_background"

            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter Your Password"
            android:drawableLeft="@drawable/login_password_img"
            android:background="@drawable/edittext_background"
            />

        <LinearLayout
            android:id = "@+id/loginMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/bLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login !"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="top"
                android:background="#ff424aff"
                android:layout_marginRight="5dp"
                />

            <Button
                android:id="@+id/bRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register !"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="#ff424aff"
                android:layout_marginLeft="5dp"
                />





        </LinearLayout>





    </LinearLayout>


</ScrollView>




